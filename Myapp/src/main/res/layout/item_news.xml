<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:id="@+id/new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="贵州雷山十一长假前6天旅游入账10亿 创历史新高"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/news_height"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/new_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/home_scroll_default"
                android:padding="0.5dp"
                android:scaleType="fitXY" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/new_icon1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/home_scroll_default"
                android:padding="0.5dp"
                android:scaleType="fitXY" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/new_icon2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/home_scroll_default"
                android:padding="0.5dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <TextView
            android:id="@+id/news_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="111"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
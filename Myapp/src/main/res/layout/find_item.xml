<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.example.myapplication.view.RoundImageView
            android:id="@+id/find_ic"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/find" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/find_ic"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/find_realout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/find_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无雨"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/find_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="12:03" />
            </RelativeLayout>

            <TextView
                android:id="@+id/find_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="描述：厉害"
                android:textSize="16dp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>